@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel




<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>

        <div class="col-6 text-end">

            <a asp-controller="Categories/Create"  class="btn btn-primary">
                Create New Category
                <i class="bi bi-file-plus-fill"></i>

            </a>

        </div>

    </div>

    <hr class="border-2 mb-5 mt-5 bg-dark" />
    
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category ID
                </th>
                <th>
                    Category Name
                </th>
                <th>
                    Category Display Order
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.CategoryList)
            {
                <tr>
                    <td>
                        @obj.Id
                    </td>
                    <td>

                        @obj.Name

                    </td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                    <td >

                        <div class="w-75 btn-group">
                            <a asp-page="category/edit"  asp-route-Id="@obj.Id" class="btn btn-primary mx-2 " >
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="category/delete"  asp-route-Id="@obj.Id" class="btn btn-outline-danger mx-2 ">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>

                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>