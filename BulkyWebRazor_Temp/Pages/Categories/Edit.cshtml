@page
@model BulkyWebRazor_Temp.Pages.Categories.EditModel
@{
}
<form method="post">
    <div class="border mt-4 p-3">
        <div class="row pb-2">
            <h2 class="text-primary">
                Edit Category
            </h2>
            <hr />
        </div>


        <div class="mb-3 row p-1">
            <label asp-for="Category.Name" class="p-1">

            </label>
            <input asp-for="Category.Name" class="form-control" />
            
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Category.DisplayOrder" class="p-1">

            </label>
            <input asp-for="Category.DisplayOrder" class="form-control" />
           
        </div>

        <div class="row">
            <div class="col-lg-6 col-md-3">
                <button type="submit" class="btn btn-primary" style="width:150px">
                    Edit
                </button>

            </div>
            <div class="col-lg-6 col-md-3">
                <a asp-controller="/categories/index" asp-action="Index" class="btn btn-outline-secondary form-control" style="width:150px">
                    Back to List
                </a>

            </div>

        </div>



    </div>

</form>


@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}