@model BulkyBook.Models.Models.Category


<div class="card shadow-lg  border-0 mt-5 ">

    <div class="card-header bg-info bg-gradient py-3 m-lg-0">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2 fw-bold">
                    EDIT CATEGORY
                </h2>

            </div>
        </div>

    </div>
    <div class="card-body px-4 pt-1 pb-2">
        <form method="post" class="row p-3">
            <div class="border mt-4 p-3">

                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control" placeholder="Name" />
                    <label asp-for="Name">Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>


                <div class="form-floating mb-3">
                    <input asp-for="DisplayOrder" class="form-control" placeholder="Display Order" />
                    <label asp-for="DisplayOrder">Display Order</label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>


                <div class="row m-3">
                    <div class="col-lg-6 col-md-3">
                        <button type="submit" class="btn btn-primary" style="width:150px">
                            Edit
                        </button>

                    </div>
                    <div class="col-lg-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control" style="width:150px">
                            Back to List
                        </a>

                    </div>

                </div>



            </div>

        </form>

    </div>

</div>

@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}