@model Category 

<form method="post">
    <div class="border mt-4 p-3">
        <div class="row pb-2">
            <h2 class="text-primary">
                Create Category 
            </h2>
            <hr />
        </div>

        <div class="mb-3 row p-1">
            <label class="p-1">
                Id
            </label>
            <input asp-for="Id" class="form-control" />
        </div>


        <div class="mb-3 row p-1">
            <label class="p-1">
                Category Name
            </label>
            <input asp-for="Name"  class="form-control" />
        </div>

        <div class="mb-3 row p-1">
            <label class="p-1">
                Display Order
            </label>
            <input asp-for="DisplayOrder"  class="form-control" />
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="button" class="btn btn-primary" style="width:150px">
                    Create
                </button>

            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control" style="width:150px">
                    Back to List
                </a>

            </div>

        </div>

        
        
    </div>

</form>