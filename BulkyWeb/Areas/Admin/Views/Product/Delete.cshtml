@model BulkyBook.Models.Models.Product


<div class="card shadow-lg  border-0 mt-5 ">

    <div class="card-header bg-info bg-gradient py-3 m-lg-0">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2 fw-bold">
                    DELETE CATEGORY
                </h2>

            </div>
        </div>

    </div>
    <div class="card-body px-4 pt-1 pb-2">
        <form method="post" class="row p-3">
            <div class="border mt-4 px-5 py-3">


                <div class="form-floating m-3">
                    <input asp-for="Title" disabled class="form-control" placeholder="Product Title" />
                    <label asp-for="Title">Product Name</label>
                    
                </div>

                <div class="form-floating m-3">
                    <input asp-for="ISBN" disabled class="form-control" placeholder="ISBN" />
                    <label asp-for="ISBN">ISBN</label>
                   
                </div>


                <div class="form-floating m-3">
                    <input asp-for="Author" disabled class="form-control" placeholder="Author" />
                    <label asp-for="Author">Author</label>
                    
                </div>

                <div class="form-floating m-3">
                    <input asp-for="ListPrice" disabled class="form-control" placeholder="List Price" />
                    <label asp-for="ListPrice">List Price</label>
                    
                </div>

                <div class="form-floating m-3">
                    <input asp-for="Price" disabled class="form-control" placeholder="Price" />
                    <label asp-for="Price">Price</label>
                   
                </div>

                <div class="form-floating m-3">
                    <input asp-for="Price50" disabled class="form-control" placeholder="Price 50" />
                    <label asp-for="Price50">Price 50 </label>
                    
                </div>

                <div class="form-floating m-3">
                    <input asp-for="Price100" disabled class="form-control" placeholder="Price 100" />
                    <label asp-for="Price100">Price 100</label>
                    
                </div>


                <div class="row m-3">
                    <div class="col-lg-6 col-md-3">
                        <button type="submit" class="btn btn-danger" style="width:150px">
                            Delete
                        </button>

                    </div>
                    <div class="col-lg-6 col-md-3">
                        <a asp-controller="Category"  asp-action="Index" class="btn btn-outline-secondary form-control" style="width:150px">
                            Back to List
                        </a>

                    </div>

                </div>



            </div>

        </form>

    </div>

</div>
