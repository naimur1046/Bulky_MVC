@model List<BulkyBook.Models.Models.Product>


<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>

        <div class="col-6 text-end">

            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                Create New Product
                <i class="bi bi-file-plus-fill"></i>

            </a>

        </div>

    </div>

    <hr class="border-2 mb-5 mt-5 bg-dark" />
    
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Id 
                </th>
                <th>
                    Title
                </th>
                <th>
                    ISBN
                </th>
                <th>
                    Author
                </th>
                <th>
                    Price
                </th>
                <th>
                    Category
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Id
                    </td>
                    <td>

                        @obj.Title

                    </td>
                    <td>
                        @obj.ISBN
                    </td>
                    <td>
                        @obj.Author
                    </td>
                    <td>
                        @obj.Price
                    </td>
                    <td >

                        <div class="w-75 btn-group">
                            <a asp-controller="Product" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2 " >
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-outline-danger mx-2 ">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>

                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>